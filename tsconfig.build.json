{
  "display": "Build",
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "moduleResolution": "node",

    "resolveJsonModule": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "declaration": true,

    "noEmit": false,

    "outDir": "./dist"
  },
  "exclude": ["node_modules"],
  "include": ["src"]
}
