{
  "name": "account-abstraction",
  "version": "1.0.0",
  "description": "Multi Signature Account Abstraction",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "/dist"
  ],
  "scripts": {
    "reinstall": "rm -rf node_modules/ && npm install",
    "clear": "rm -rf dist",
    "prettier:format": "prettier --write \"deploy/**/*.ts\" \"scripts/**/*.ts\" \"test/**/*.ts\"",
    "prettier:fix": "prettier --config ./.prettierrc --ignore-path ./prettierignore --write .",
    "prettier:check": "prettier --check .",
    "lint": "npx eslint '{test,scripts,deploy,shared}/**/*.ts'",
    "lint:fix": "npx eslint '{test,scripts,deploy,shared}/**/*.ts' --fix",
    "lint:sol": "npx solhint 'contracts/**/*.sol'",
    "watch": "tsc -w",
    "test": "npx hardhat test",
    "clean-full-deploy:mumbai": "hardhat clean && hardhat compile && hardhat deploy --network polygon-mumbai",
    "deploy:mumbai": "hardhat deploy --network polygon-mumbai --tags ACCOUNT_FACTORY",
    "generate-typechain": "hardhat typechain",
    "export-contract-abi": "hardhat export-abi --no-compile",
    "generate-exported-abi-index": "ts-node scripts/build/generate-exported-abi-index.ts",
    "generate-contract-abi": "npm run export-contract-abi && npm run generate-exported-abi-index",
    "generate-index": "ts-node scripts/build/generate-index.ts",
    "export-deployments-mumbai": "npx hardhat --network polygon-mumbai run scripts/build/export-deployments.ts",
    "export-deployments": "npm run export-deployments-mumbai",
    "prebuild": "npm run clear && npm run generate-typechain && npm run generate-contract-abi && npm run generate-index && npm run export-deployments",
    "build": "tsc --project tsconfig.build.json",
    "verify": "npx hardhat verify --network polygon-mumbai <DEPLOYED_CONTRACT_ADDRESS> <ARGS>"
  },
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@openzeppelin/contracts": "^5.0.1",
    "ethers": "^6.9.2"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-chai-matchers": "^2.0.3",
    "@nomicfoundation/hardhat-ethers": "^3.0.5",
    "@nomicfoundation/hardhat-toolbox": "^4.0.0",
    "@nomicfoundation/hardhat-verify": "^2.0.4",
    "@types/ecurve": "^1.0.0",
    "@types/elliptic": "^6.4.14",
    "@types/secp256k1": "^4.0.3",
    "bigi": "^1.4.2",
    "chai-asserttype": "^1.0.5",
    "dotenv": "^16.4.1",
    "ecurve": "^1.0.6",
    "eslint": "^8.56.0",
    "hardhat": "^2.19.4",
    "hardhat-abi-exporter": "^2.10.1",
    "hardhat-dependency-compiler": "^1.1.3",
    "hardhat-deploy": "^0.11.45",
    "prettier": "^3.1.1",
    "secp256k1": "^5.0.0",
    "solc": "0.8.19",
    "solhint": "^4.1.1"
  }
}
