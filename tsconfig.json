{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true
  },
  "include": [
    "./src",
    "./scripts",
    "./test",
    "./typechain",
    "./deploy",
    "./shared"
  ],
  "exclude": ["node_modules", "**/*.spec.ts"],
  "files": ["hardhat.config.ts"]
}
